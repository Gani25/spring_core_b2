<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean name="tataBean" class="com.sprk.cars.Tata"></bean>
	<bean name="mgBean" class="com.sprk.cars.MG"></bean>
	<bean name="bmwBean" class="com.sprk.cars.BMW"></bean>
	
	<bean name="dealership" class="com.sprk.showroom.SPRKDealership">
		<!-- Constructor Injection -->
		<constructor-arg name="carBrand" ref="tataBean"></constructor-arg>
	</bean>
	
	
   
</beans>